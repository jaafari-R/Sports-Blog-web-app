extends ../layout 


block content 
    .container
        h1 #{title}
        form(method='post', action=`/categories/edit/${category._id}`)
            .form-group
                label Title:
                input.form-control(name='title', type='text' value=category.title)
            .form-group
                label Description:
                textarea.form-control(name='description') #{category.description}
            br
            input(class='btn btn-primary form-control' type='submit', name='submit', value='save')
            hr
            a(class='btn btn-danger form-control' href='/manage/categories') Back